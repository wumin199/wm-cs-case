              <Style TargetType = "{x:Type Button}">
                <Style.Triggers>
                  <Trigger Property = "IsMouseOver" Value = "True">
                    <Setter Property = "Foreground" Value = "Red" />
                  </Trigger>

                </Style.Triggers>
              </Style>
            </Button.Style>
          </Button>
          <Label Content="IsMouseOver是默认支持的依赖属性" Margin="10,26,543,334" >
          </Label>
                </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
