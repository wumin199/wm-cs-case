<Window x:Class="FirstWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWPF"
        mc:Ignorable="d"
        Title="Greetings
        " Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="27*"/>
      <ColumnDefinition Width="373*"/>
    </Grid.ColumnDefinitions>
    <TextBox HorizontalAlignment="Left" Margin="28,51,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Width="472" Grid.Column="1"/>
    <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="54,167,0,0" VerticalAlignment="Top" IsChecked="True" Grid.Column="1"/>
    <RadioButton x:Name="GoodByeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="287,163,0,0" VerticalAlignment="Top" Grid.Column="1"/>
    <Button x:Name="Display" Content="Button" HorizontalAlignment="Left" Margin="249,249,0,0" VerticalAlignment="Top" Click="Display_Click" Grid.Column="1"/>

  </Grid>
</Window>
